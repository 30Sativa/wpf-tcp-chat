<Window x:Class="ChatServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Server" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1877F2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#166FE5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E4E6EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with gradient background -->
        <Border Grid.Row="0" 
                Background="#1877F2"
                Padding="24,18">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Opacity="0.1" 
                                ShadowDepth="0" 
                                BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="🖥️ Chat Server" 
                             FontSize="22" 
                             FontWeight="Bold" 
                             Foreground="White"
                             Margin="0,0,0,2"/>
                    <TextBlock Text="Server Management Console" 
                             FontSize="13" 
                             Foreground="#E4F2FF"
                             FontWeight="Normal"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="▶ Start Server"
                        x:Name="btnStartServer"
                        Click="StartServer_Click"
                        Height="44"
                        MinWidth="140"
                        Background="#42B72A"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Padding="20,12"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#42B72A"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#36A420"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#2B9217"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Log Section -->
        <Border Grid.Row="1" 
                Margin="24"
                Background="White"
                BorderBrush="#E4E6EB"
                BorderThickness="1"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Opacity="0.06" 
                                ShadowDepth="0" 
                                BlurRadius="12"/>
            </Border.Effect>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Log Header -->
                <Border Grid.Row="0"
                        Background="#F8F9FA"
                        BorderBrush="#E4E6EB"
                        BorderThickness="0,0,0,1"
                        Padding="16,12"
                        CornerRadius="12,12,0,0"
                        Margin="-20,-20,-20,0">
                    <TextBlock Text="📋 Server Log"
                          FontSize="15"
                          FontWeight="SemiBold"
                          Foreground="#050505"/>
                </Border>

                <!-- Log Content -->
                <Border Grid.Row="1"
                        BorderBrush="#E4E6EB"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="0,16,0,0"
                        Background="#FAFAFA">
                    <TextBox x:Name="txtLog"
                             Style="{StaticResource ModernTextBox}"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             BorderThickness="0"
                             Background="Transparent"
                             FontFamily="Consolas"
                             FontSize="12"
                             Padding="16"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>

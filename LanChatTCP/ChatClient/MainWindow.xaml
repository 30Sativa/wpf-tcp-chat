<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ChatClient"
        Title="Chat Application"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        FontFamily="Segoe UI">

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>
        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Inverse Boolean to Visibility Converter -->
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        
        <!-- File Size Converter -->
        <local:FileSizeConverter x:Key="FileSizeConverter"/>
        
        <!-- Image Path Converter -->
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
        
        <!-- Progress to Width Converter -->
        <local:ProgressToWidthConverter x:Key="ProgressConverter"/>
        
        <!-- System Message Style -->
        <Style x:Key="SystemMessageStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#65676B"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,12"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1877F2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#166FE5"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#E4E6EB"/>
                    <Setter Property="Foreground" Value="#BCC0C4"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Send Button Style (Zalo Style - Icon Button) -->
        <Style x:Key="SendButton" TargetType="Button">
            <Setter Property="Background" Value="#0068FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22"
                                Width="44"
                                Height="44">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0052CC"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#E5E5E5"/>
                    <Setter Property="Foreground" Value="#B0B0B0"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Emoji Button Style -->
        <Style x:Key="EmojiButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="21">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E4E6EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Attach Menu Item Style -->
        <Style x:Key="AttachMenuItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#050505"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F2F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Small Emoji Button -->
        <Style x:Key="SmallEmojiButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F2F5"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style (Zalo Style) -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0068FF"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- ================= LAYOUT ================= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER (Zalo Style) ================= -->
        <Border Grid.Row="0" 
                Background="#0068FF"
                Padding="16,12">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock Text="ðŸ’¬"
                           FontSize="20"
                           Margin="0,0,8,0"
                           VerticalAlignment="Center"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Chat Application"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock x:Name="txtStatus"
                               Text="Not Connected"
                               Foreground="#B3D9FF"
                               FontSize="11"
                               FontWeight="Normal"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ================= CHAT MESSAGES (Zalo Style) ================= -->
        <Border Grid.Row="1"
                Margin="0"
                Background="#F5F5F5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Messages Area (Zalo Style) -->
                <ScrollViewer x:Name="MessagesScrollViewer"
                            Grid.Row="1"
                            VerticalScrollBarVisibility="Auto"
                            Background="#F5F5F5"
                            Padding="16,12">
                    <ItemsControl x:Name="MessagesList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- System Message -->
                                    <TextBlock Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="{Binding Message}"
                                               Style="{StaticResource SystemMessageStyle}"
                                               HorizontalAlignment="Center"
                                               Visibility="{Binding IsSystemMessage, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    
                                    <!-- Left Message (Others) - Zalo Style -->
                                    <Border Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            MaxWidth="400"
                                            Background="#FFFFFF"
                                            CornerRadius="18"
                                            Padding="12,8,12,8"
                                            Margin="0,0,80,0"
                                            BorderBrush="#E5E5E5"
                                            BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSystemMessage}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsOwnMessage}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <TextBlock Text="{Binding SenderName}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="#0068FF"
                                                       Margin="0,0,0,4"
                                                       Visibility="{Binding IsFileMessage, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                            
                                            <!-- Image Display (Zalo Style) -->
                                            <Border Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Margin="0,0,0,4"
                                                    CornerRadius="12"
                                                    Background="#F0F0F0"
                                                    BorderBrush="#E5E5E5"
                                                    BorderThickness="1">
                                                <Image x:Name="imgMessage"
                                                       Source="{Binding FilePath, Converter={StaticResource ImagePathConverter}}"
                                                       MaxWidth="300"
                                                       MaxHeight="300"
                                                       Stretch="Uniform"
                                                       Cursor="Hand"
                                                       MouseLeftButtonDown="Image_MouseLeftButtonDown">
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Trigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                               To="1.02" Duration="0:0:0.2"/>
                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                               To="1.02" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.EnterActions>
                                                                    <Trigger.ExitActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                               To="1" Duration="0:0:0.2"/>
                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                               To="1" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.ExitActions>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </Border>

                                        <!-- Voice Message -->
                                        <Border Visibility="{Binding IsAudio, Converter={StaticResource BoolToVisibilityConverter}}"
                                                Background="#F5F5F5"
                                                BorderBrush="#E5E5E5"
                                                BorderThickness="1"
                                                CornerRadius="12"
                                                Padding="10"
                                                Margin="0,0,0,6">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Width="36"
                                                        Height="36"
                                                        Margin="0,0,8,0"
                                                        Click="PlayVoice_Click"
                                                        Background="#0068FF"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Cursor="Hand">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Content" Value="â–¶"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsAudioPlaying}" Value="True">
                                                                    <Setter Property="Content" Value="â¸"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <StackPanel>
                                                    <TextBlock Text="Tin nháº¯n thoáº¡i"
                                                               FontSize="13"
                                                               FontWeight="SemiBold"
                                                               Foreground="#050505"/>
                                                    <TextBlock Text="{Binding AudioDuration}"
                                                               FontSize="12"
                                                               Foreground="#65676B"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                            
                                            <!-- File Display (Zalo Style) -->
                                            <Border Background="#F5F5F5"
                                                    BorderBrush="#E5E5E5"
                                                    BorderThickness="1"
                                                    CornerRadius="10"
                                                    Padding="14"
                                                    Margin="0,0,0,4"
                                                    Visibility="{Binding ShowFileInfo, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Cursor="Hand">
                                                <StackPanel>
                                                    <TextBlock Text="ðŸ“Ž"
                                                               FontSize="32"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,6"/>
                                                    <TextBlock Text="{Binding FileName}"
                                                               FontSize="13"
                                                               FontWeight="SemiBold"
                                                               Foreground="#050505"
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding FileSize, Converter={StaticResource FileSizeConverter}}"
                                                               FontSize="11"
                                                               Foreground="#65676B"
                                                               TextAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            
                                            <!-- Text Message -->
                                            <TextBlock Text="{Binding Message}"
                                                       TextWrapping="Wrap"
                                                       FontSize="14"
                                                       Foreground="#050505"
                                                       FontFamily="Segoe UI"
                                                       LineHeight="20"
                                                       Visibility="{Binding IsFileMessage, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            
                                            <TextBlock Text="{Binding Time}"
                                                       FontSize="11"
                                                       Foreground="#999999"
                                                       HorizontalAlignment="Right"
                                                       Margin="0,4,0,0"
                                                       Opacity="0.8"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Right Message (Own) - Zalo Style -->
                                    <Border Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            MaxWidth="400"
                                            Background="#E3F2FD"
                                            CornerRadius="18"
                                            Padding="12,8,12,8"
                                            Margin="80,0,0,0"
                                            BorderBrush="#BBDEFB"
                                            BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsOwnMessage}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <!-- Image Display (Zalo Style) -->
                                            <Border Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Margin="0,0,0,4"
                                                    CornerRadius="12"
                                                    Background="#E3F2FD"
                                                    BorderBrush="#BBDEFB"
                                                    BorderThickness="1">
                                                <Image Source="{Binding FilePath, Converter={StaticResource ImagePathConverter}}"
                                                       MaxWidth="300"
                                                       MaxHeight="300"
                                                       Stretch="Uniform"
                                                       Cursor="Hand"
                                                       MouseLeftButtonDown="Image_MouseLeftButtonDown">
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Trigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                               To="1.02" Duration="0:0:0.2"/>
                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                               To="1.02" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.EnterActions>
                                                                    <Trigger.ExitActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                               To="1" Duration="0:0:0.2"/>
                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                               To="1" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.ExitActions>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </Border>
                                            
                                            <!-- Voice Message -->
                                            <Border Visibility="{Binding IsAudio, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Background="#E3F2FD"
                                                    BorderBrush="#BBDEFB"
                                                    BorderThickness="1"
                                                    CornerRadius="12"
                                                    Padding="10"
                                                    Margin="0,0,0,6">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Button Width="36"
                                                            Height="36"
                                                            Margin="0,0,8,0"
                                                            Click="PlayVoice_Click"
                                                            Background="#0068FF"
                                                            Foreground="White"
                                                            BorderThickness="0"
                                                            Cursor="Hand">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Content" Value="â–¶"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsAudioPlaying}" Value="True">
                                                                        <Setter Property="Content" Value="â¸"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                    <StackPanel>
                                                        <TextBlock Text="Tin nháº¯n thoáº¡i"
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#050505"/>
                                                        <TextBlock Text="{Binding AudioDuration}"
                                                                   FontSize="12"
                                                                   Foreground="#65676B"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                            <!-- File Display (Zalo Style) -->
                                            <Border Background="#E3F2FD"
                                                    BorderBrush="#BBDEFB"
                                                    BorderThickness="1"
                                                    CornerRadius="10"
                                                    Padding="14"
                                                    Margin="0,0,0,4"
                                                    Visibility="{Binding ShowFileInfo, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Cursor="Hand">
                                                <StackPanel>
                                                    <TextBlock Text="ðŸ“Ž"
                                                               FontSize="32"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,6"/>
                                                    <TextBlock Text="{Binding FileName}"
                                                               FontSize="13"
                                                               FontWeight="SemiBold"
                                                               Foreground="#050505"
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding FileSize, Converter={StaticResource FileSizeConverter}}"
                                                               FontSize="11"
                                                               Foreground="#65676B"
                                                               TextAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            
                                            <!-- Text Message -->
                                            <TextBlock Text="{Binding Message}"
                                                       TextWrapping="Wrap"
                                                       FontSize="14"
                                                       Foreground="#050505"
                                                       FontFamily="Segoe UI"
                                                       LineHeight="20"
                                                       Visibility="{Binding IsFileMessage, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            
                                            <TextBlock Text="{Binding Time}"
                                                       FontSize="11"
                                                       Foreground="#999999"
                                                       HorizontalAlignment="Right"
                                                       Margin="0,4,0,0"
                                                       Opacity="0.8"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ================= INPUT AREA (Zalo Style) ================= -->
        <Border Grid.Row="2"
                Margin="0"
                Background="White"
                BorderBrush="#E5E5E5"
                BorderThickness="0,1,0,0"
                Padding="12,10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- File Progress Bar (hidden by default) -->
                <Border Grid.Row="0" 
                        x:Name="FileProgressContainer"
                        Background="#F5F5F5"
                        BorderBrush="#E5E5E5"
                        BorderThickness="0,0,0,1"
                        Padding="12,8"
                        Visibility="Collapsed"
                        Margin="0,0,0,8">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="txtFileProgress"
                                       Text="Äang gá»­i file..."
                                       FontSize="12"
                                       Foreground="#666666"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtFileProgressPercent"
                                       Grid.Column="1"
                                       Text="0%"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#0068FF"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <ProgressBar x:Name="fileProgressBar"
                                     Height="4"
                                     Margin="0,6,0,0"
                                     Minimum="0"
                                     Maximum="100"
                                     Value="0"
                                     Background="#E5E5E5"
                                     Foreground="#0068FF">
                            <ProgressBar.Style>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ProgressBar">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="3"
                                                        Height="6">
                                                    <Grid>
                                                        <Border x:Name="PART_Track"
                                                                Background="{TemplateBinding Background}"
                                                                CornerRadius="3"/>
                                                        <Border x:Name="PART_Indicator"
                                                                Background="{TemplateBinding Foreground}"
                                                                CornerRadius="3"
                                                                HorizontalAlignment="Left">
                                                            <Border.Width>
                                                                <MultiBinding Converter="{StaticResource ProgressConverter}">
                                                                    <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Value"/>
                                                                    <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Maximum"/>
                                                                    <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="ActualWidth"/>
                                                                </MultiBinding>
                                                            </Border.Width>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>
                    </StackPanel>
                </Border>

                <!-- Input Row -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>

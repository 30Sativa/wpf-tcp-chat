<Window x:Class="ChatClient.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect to Server"
        Height="550"
        Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1877F2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#166FE5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E4E6EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1877F2"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#65676B"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#1877F2"
                Padding="24,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Opacity="0.1" 
                                ShadowDepth="0" 
                                BlurRadius="8"/>
            </Border.Effect>
            <TextBlock Text="🔌 Connect to Server"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1"
                Margin="30"
                Background="White"
                BorderBrush="#E4E6EB"
                BorderThickness="1"
                CornerRadius="12"
                Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Opacity="0.06" 
                                ShadowDepth="0" 
                                BlurRadius="12"/>
            </Border.Effect>

            <StackPanel>
                <!-- Username -->
                <TextBlock Text="Username" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtName" 
                         Text="User"
                         Style="{StaticResource ModernTextBox}"
                         Height="44"
                         Margin="0,0,0,20"
                         KeyDown="TextBox_KeyDown"/>

                <!-- Server IP -->
                <TextBlock Text="Server IP Address" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtIP" 
                         Text="127.0.0.1"
                         Style="{StaticResource ModernTextBox}"
                         Height="44"
                         Margin="0,0,0,20"
                         KeyDown="TextBox_KeyDown"/>

                <!-- Port -->
                <TextBlock Text="Port" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtPort" 
                         Text="5000"
                         Style="{StaticResource ModernTextBox}"
                         Height="44"
                         Margin="0,0,0,30"
                         KeyDown="TextBox_KeyDown"/>

                <!-- Connect Button -->
                <Button Content="Connect"
                        Style="{StaticResource ModernButton}"
                        Height="48"
                        Click="Connect_Click"
                        FontSize="15"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
